<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <application xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.tencent.qcloud.tim.demo.DemoApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/demo_app_name"
        android:supportsRtl="true"
        android:theme="@style/DemoAppTheme">
        <activity
            android:name="com.tencent.qcloud.tim.demo.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.tencent.qloud.splash" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tencent.qcloud.tim.demo.login.LoginForDevActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.login.LanguageSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.login.ThemeSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.login.StyleSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/DemoAppTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.tencent.qcloud"
                    android:path="/detail"
                    android:scheme="pushscheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.qcloud.tim.demo.profile.SelfDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.profile.AboutIMActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.main.MainMinimalistActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/DemoAppTheme"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="com.tencent.qcloud"
                    android:path="/detail"
                    android:scheme="pushscheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.qcloud.tim.demo.profile.SelfDetailMinamalistActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tencent.qcloud.tim.demo.profile.AboutIMMinamalistActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
